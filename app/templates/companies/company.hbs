
<!-- app/templates/dashboard.hbs -->
<h2>
  {{model.name}}
  <span class="label label-info">Glassdoor rating: {{model.glassdoor_rating}}</span>
  {{#if (eq model.interest 1)}}
    <span class="glyphicon glyphicon-heart" {{action "toggleHeart" model model.interest}}></span>
  {{else}}
    <span class="glyphicon glyphicon-heart-empty" {{action "toggleHeart" model model.interest}}></span>
  {{/if}}
</h2>

<div class="row">
  <div class="col-sm-12">

    <br>
    {{#text-type}}
    <h3>Try these Dark Rituals.</h3>
    <!-- <h4>It yearns for your credentials:</h4> -->
    {{/text-type}}

    <div class="rituals">
      {{#each recommendations as |recommendation|}}
      {{dark-ritual recommendation=recommendation}}
      {{/each}}
    </div>

    <br>

  </div>
</div>


<div class="row">
  {{show-resources model=model}}
  {{show-leads model=model}}

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h5 class="panel-title">Jobs</h5>
        {{link-to "Add Job" 'jobs.new'}}
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Application Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.jobs as |job| }}
            <tr>
              <td>
                {{ember-inline-edit
                  value=job.title
                  field='textarea'
                  onSave=(action "updateJob" job)}}
                </td>
            </tr>
          {{/each }}
        </tbody>
      </table>
    </div>
  </div>

</div>

<div class="row">
  {{show-notes model=model}}
</div>
